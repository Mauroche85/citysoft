<?page title="GTTR - Gestion de Taxis en tiempo real" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="Bienvenido gedonadia" border="normal">
		<tabbox>
			<tabs>
				<tab label="Mi viaje actual" selected="true" />
				<tab id="tab2" label="Mi GTTR" />
			</tabs>
			<tabpanels>
				<tabpanel>
					<label value="CÃ³digo de Viaje:" />
					<combobox>
						<comboitem label="1" />
						<comboitem label="2" />
					</combobox>
					<separator />
					Usted no posee viajes asignados
				</tabpanel>
				<tabpanel fulfill="tab2.onSelect">
					<tabbox width="100%" height="460px"
						orient="vertical">
						<tabs width="20%">
							<tab label="Solicitar viaje nuevo" />
							<tab label="Mis viajes anteriores" />
						</tabs>
						<tabpanels>
							<tabpanel height="460px">

								<window id="winNuevoViaje"
									title="Viaje Nuevo" border="normal" width="320px">

									<window id="winDatosViaje"
										title="Mi Viaje" border="normal" width="305px">
										<grid width="300">
											<columns>
												<column></column>
												<column></column>
											</columns>
											<rows>
												<row>
													<label
														value="Hora de solicitud:" />
													<timebox
														name="stOrigenHora" />
												</row>
												<row>
													<label
														value="Persona Referente:" />
													<textbox
														name="stOrigenReferente" />
												</row>

												<row>
													<label
														value="Observaciones:" />
													<textbox
														name="stOrigenObservaciones" />
												</row>
											</rows>


										</grid>



									</window>


									<window id="winOrigenViaje"
										title="Desde" border="normal" width="305px">

										<grid width="300">
											<columns>
												<column></column>
												<column></column>
											</columns>
											<rows>
												<row>
													<label
														value="Calle Origen:" />
													<textbox
														name="stOrigenCalle" />
												</row>
												<row>
													<label
														value="Altura:" />
													<textbox
														name="stOrigenAltura" />
												</row>
												<row>
													<label
														value="Piso y Departamento:" />
													<textbox
														name="stOrigenPisoDepto" />
												</row>


												<row>
													<label
														value="Localidad:" />
													<textbox
														name="stOrigenLocalidad" />
												</row>



											</rows>

										</grid>

									</window>

									<window id="winDestinoViaje"
										title="Hasta" border="normal" width="305px">

										<grid width="300">
											<columns>
												<column></column>
												<column></column>
											</columns>
											<rows>
												<row>
													<label
														value="Calle:" />
													<textbox
														name="stDestinoCalle" />
												</row>
												<row>
													<label
														value="Altura:" />
													<textbox
														name="stDestinoAltura" />
												</row>
												<row>
													<label
														value="Piso y Departamento:" />
													<textbox
														name="stDestinoPisoDepto" />
												</row>


												<row>
													<label
														value="Localidad:" />
													<textbox
														name="stDestinoLocalidad" />
												</row>



											</rows>

										</grid>

									</window>
									<hbox align="center">
										<button label="Aceptar"
											onClick="" />
										<button label="Cancelar" />
									</hbox>



								</window>

							</tabpanel>
							<tabpanel>
								<listbox id="listViajesAnteriores"
									width="200px" height="25%">
									<listhead>
										<listheader
											label="Viajes anteriores" sort="auto" />
									</listhead>
									<listitem>
										<listcell
											context="menuContextViajesAnteriores">
											<label value="34768" />
										</listcell>
									</listitem>
